function vncssh {
output=$(ssh desdemona<<EOF
citv showvm | grep $1
EOF)
output2=$(echo $output | egrep -o vm\:[0-9]+)
echo $output2
    ssh -f -L 5901:$output2 acoulter@ssh.cs.dixie.edu sleep 10;
    vncviewer localhost:5901
}

